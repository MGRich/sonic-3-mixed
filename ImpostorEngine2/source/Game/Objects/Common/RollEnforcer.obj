event OnCollisionWithPlayer(PlayerID:int, HitFrom:int, Data:int) : int {
    local player:IPlayer = Scene.Players[PlayerID];
    if (player.GroundSpeed == 0) {
        if ((SubType & 0xF) != 0x4) {
            if ((player.DisplayFlip < 0) == this.FlipX) {
                player.X &= 0xFFFF0000;
                player.Y &= 0xFFFF0000;
                player.ForceRoll = true;
                player.GroundSpeed = Math.sign(player.DisplayFlip) * 0x580;
                player.Ground = true;
            }
            else {
                player.ForceRoll = false;
            }
        }
    }
    else {
        if ((SubType & 0xF) != 0x4) {
            if ((player.GroundSpeed < 0) == this.FlipX) {
                player.X &= 0xFFFF0000;
                player.Y &= 0xFFFF0000;
                player.ForceRoll = true;
                player.GroundSpeed = Math.sign(player.XSpeed) * 0x580;
                player.Ground = true;
            }
            else {
                player.ForceRoll = false;
            }
        }
        else {
            player.X &= 0xFFFF0000;
            player.Y &= 0xFFFF0000;
            player.ForceRoll = false;
        }
    }

    return 1;
}
