subclass Enemy;

event Create() {
    Active = true;
    Priority = true;

    W = 16;
    H = 16;

    Invincible = true;

    

    BounceOffShield = true;
    VisualLayer = 1;
}

event Update() {
    YSpeed += 0x38;
    SubX += XSpeed << 8;
    SubY += YSpeed << 8;

    if (!OnScreen) {
        X = -16;
        Y = -16;
        XSpeed = 0;
        YSpeed = 0;
    }
}

event Render(CamX:int, CamY:int) {
    G.DrawSprite(Sprite, CurrentAnimation, 6, X - CamX, Y - CamY, 0, IE_NOFLIP);
}
