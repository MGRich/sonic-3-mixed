object 0xA5;

subclass Enemy;

var Children:Object[2];

event Create() {
    Active = true;
    Priority = true;

    W = 16;
    H = 16;
    VisW = 16;
    VisH = 16;
    Gravity = 0;
    
    Frame = 0;
    CurrentAnimation = 35;
    
    for (var i:int = 0; i < 2; i++) {
        Children[i] = Scene.AddNewObject(Obj_BatbrightParts, 0, X, Y, false, false);
        Children[i].Sprite = Sprite;
        Children[i].CurrentAnimation = CurrentAnimation + i;
        Children[i].Parent = this;
    }
    
    VisualLayer = 1;
}

event Update() {
    CheckDistanceToPlayers();
    if (PlayerXDistance >= 0x40) {
        App.Print(-1, "Not attacking player.");
        return;
    }
    
    
    XSpeed = 0x200;
    if (PlayerRelativeXDirection == 0) {
        XSpeed = -XSpeed;
    }
    
    MoveTowardsTargetPosition(ClosetPlayer, 0x200, 8);
    MoveSprite();
}

event OnAnimationFinish() {

}

event OnHit() : int {
    Children[0].Active = false;
    Children[1].Active = false;
    return OnDeath();
}

event OnCollisionWithPlayer(PlayerID:int, HitFrom:int, Data:int) : int {
    var Player:IPlayer = Scene.Players[PlayerID];
    if (Player == 0) {
        return false;
    }
    
    return 1;
}

event Render(CamX:int, CamY:int) {
    // Animation Timer data:
    // 2, 0, 1, 2, 1, $FC

    G.DrawSprite(Sprite, CurrentAnimation, Frame, X - CamX, Y - CamY, 0, IE_NOFLIP);
}